<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="viewport" content="width=device-width, intial-scale=1">
    <title>Calculator</title>
    <style>
        *{
        margin:0;
        padding:0;
        box-sizing:border-box;
        }
        .container {
          width: 340px;
          height: 310px;
          padding: 10px;
          border-radius: 10px;
          margin-left:505px;
          margin-top:140px;
          background-color: gray;
          text-align:center;
        }
        
        .h1{
          margin-bottom: 20px;
        }
        .inp1{
          text-decoration: none;
          padding: 7px 35px;
          margin: 2px 10px;
          border: 2px solid gray;
          border-radius: 10px;
        }
        .result {
          text-align: center;
          text-decoration: none;
          padding: 5px 20px;
          margin: 2px 10px;
          border: 2px solid gray;
          border-radius: 10px;
        }
        .btn{
            padding: 4px 23px;
            border-radius: 8px;
            border: 2px solid gray;
            text-decoration: none;
        }

        .btn-his{
          padding: 3px 10px;
          border: 2px solid gray;
          border-radius: 8px;
          text-decoration: none;
        }

        .equal-button {
          padding: 5px 30px;
          border-radius: 8px;
          border: 2px solid gray;
        }

        .equal-button:hover {
          cursor: pointer;
          background-color: rgba(68, 57, 233, 0.685);
          transform: scale(1.1);
        }
        .clear-button {
          padding: 5px 30px;
          border-radius: 8px;
          border: 2px solid gray;
        }

        .clear-button:hover {
          cursor: pointer;
          background-color: red;
          transform: scale(1.1);
        }
        @media(max-width: 576px) {
          .container {
            width: 340px;
            height: 360px;
            padding: 10px;
            border-radius: 10px;
            margin-left:450px;
            margin-top:50px;
            background-color: #485461;
            text-align:center;
          }
        }
        </style>
  </head>
<body>
  <div class="container">
      <h1>Calculator</h1>
      <form action="/" method="post" target="output" class="form1">
        <input type="text" name="num1" placeholder="First Number" class="inp1" required><br>
        <input type="text" name="num2" placeholder="Second Number" class="inp1" required><br>
        <input type="button" value="+" name="button" onclick="oper(this.value)" class="btn">
        <input type="button" value="-" name="button" onclick="oper(this.value)" class="btn"><br>
        <input type="button" value="*" name="button" onclick="oper(this.value)" class="btn">
        <input type="button" value="/" name="button" onclick="oper(this.value)" class="btn"><br>
        <!--<input type="button" value="%" name="button" onclick="oper(this.value)" class="btn">-->
        <button type="submit" name="submit" id="equalbtn" class="equal-button">=</button>
        <input type="reset" value="AC" class="clear-button"><br><br>
        <iframe name="output" src="" width="300" class="result" height="50">
        </iframe>
      </form>
      <a href="/user/history1"><button class="btn-his">History</button></a>
    </div>
    <script>
    function oper(val) {
      document.getElementById("equalbtn").value = val;
    }
  </script>
  </body>
</html>